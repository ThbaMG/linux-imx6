#include "imx6q-nitrogen6x.dts"

/delete-node/ &sgtl5000;
/delete-node/ &ov5642;

/ {
	model = "Boundary Devices i.MX6 Quad Nitrogen6x AG Board";
	compatible = "boundary,imx6q-nitrogen6x-ag", "fsl,imx6q";

	/delete-node/ sound;
};

&iomuxc {
	/delete-node/ i2c1-sgtl5000grp;
	/delete-node/ i2c2-ov5642grp;

	pinctrl_gpio_keys2: gpio-keys2grp {
		fsl,pins = <
#define GP_GPIOKEY_BLUE_LED1	<&gpio4 6 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_KEY_COL0__GPIO4_IO06		0x0b0b0
#define GP_GPIOKEY_GREEN_LED1	<&gpio4 7 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_KEY_ROW0__GPIO4_IO07		0x0b0b0
#define GP_GPIOKEY_RED_LED1	<&gpio4 8 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_KEY_COL1__GPIO4_IO08		0x0b0b0

#define GP_GPIOKEY_BLUE_LED2	<&gpio4 9 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_KEY_ROW1__GPIO4_IO09		0x0b0b0
#define GP_GPIOKEY_GREEN_LED2	<&gpio1 0 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_GPIO_0__GPIO1_IO00		0x0b0b0
#define GP_GPIOKEY_RED_LED2	<&gpio1 3 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_GPIO_3__GPIO1_IO03		0x0b0b0

#define GP_GPIOKEY_BLUE_LED3	<&gpio1 7 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_GPIO_7__GPIO1_IO07		0x0b0b0
#define GP_GPIOKEY_GREEN_LED3	<&gpio1 8 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_GPIO_8__GPIO1_IO08		0x0b0b0
#define GP_GPIOKEY_RED_LED3	<&gpio6 11 GPIO_ACTIVE_LOW>
			MX6QDL_PAD_NANDF_CS0__GPIO6_IO11	0x0b0b0
			>;
	};

	pinctrl_can2: can2grp {
		fsl,pins = <
			MX6QDL_PAD_KEY_COL4__FLEXCAN2_TX	0x1b0b0
			MX6QDL_PAD_KEY_ROW4__FLEXCAN2_RX	0x1b0b0
#define GP_CAN2_STANDBY		<&gpio1 2 GPIO_ACTIVE_HIGH>
			/* Flexcan XCVR enable */
			MX6QDL_PAD_GPIO_4__GPIO1_IO04		0x0b0b0
		>;
	};

	pinctrl_usbotg: usbotggrp {
		fsl,pins = <
			MX6QDL_PAD_GPIO_1__USB_OTG_ID		0x17059
			MX6QDL_PAD_EIM_D21__USB_OTG_OC		0x1b0b0
		>;
	};
};

/ {
	gpio-keys {
		pinctrl-0 = <&pinctrl_gpio_keys>, <&pinctrl_gpio_keys2>;

		blue1 {
			label = "Blue1";
			gpios = GP_GPIOKEY_BLUE_LED1;
			linux,code = <KEY_0>;
		};

		green1 {
			label = "Green1";
			gpios = GP_GPIOKEY_GREEN_LED1;
			linux,code = <KEY_1>;
		};

		red1 {
			label = "Red1";
			gpios = GP_GPIOKEY_RED_LED1;
			linux,code = <KEY_2>;
		};

		blue2 {
			label = "Blue2";
			gpios = GP_GPIOKEY_BLUE_LED2;
			linux,code = <KEY_3>;
		};

		green2 {
			label = "Green2";
			gpios = GP_GPIOKEY_GREEN_LED2;
			linux,code = <KEY_4>;
		};

		red2 {
			label = "Red2";
			gpios = GP_GPIOKEY_RED_LED2;
			linux,code = <KEY_5>;
		};

		blue3 {
			label = "Blue3";
			gpios = GP_GPIOKEY_BLUE_LED3;
			linux,code = <KEY_6>;
		};

		green3 {
			label = "Green3";
			gpios = GP_GPIOKEY_GREEN_LED3;
			linux,code = <KEY_7>;
		};

		red3 {
			label = "Red3";
			gpios = GP_GPIOKEY_RED_LED3;
			linux,code = <KEY_8>;
		};
	};
};

&can2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_can2>;
	trx-stby-gpio = GP_CAN2_STANDBY;
	status = "okay";
};

